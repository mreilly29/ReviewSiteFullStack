@model IEnumerable<ReviewSite.Models.Category>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AllCategories</title>
    <link href="~/css/DisplayAll.css" rel="stylesheet" />
</head>
<body>
    <div id="back-btn">
        <a href="/" class="button" style="vertical-align:middle">
            <span>Home</span>
        </a>
    </div>

    <h1 align="left">All Categories </h1>
    <div id="names">
        @foreach (var category in Model)
        {
            <div>
                <a href="Details/@category.Id">
                    @category.Name
                </a>
            </div>
        }
    </div>
        
    
</body>
</html>
